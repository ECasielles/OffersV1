<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imvType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        />

    <TextView
        android:id="@+id/txvShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvType"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imvType"
        app:layout_constraintTop_toTopOf="@+id/imvType"
        tools:text="Shop"
        />

    <TextView
        android:id="@+id/txvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/imvType"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/imvType"
        app:layout_constraintEnd_toStartOf="@+id/txvDate"
        app:layout_constraintStart_toEndOf="@+id/imvType"
        app:layout_constraintTop_toTopOf="@+id/txvShop"
        tools:text="Name"
        />

    <TextView
        android:id="@+id/txvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imvType"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/txvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvName"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Date"
        />

</android.support.constraint.ConstraintLayout>